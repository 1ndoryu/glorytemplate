{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["../../Glory/assets/react/src/*"],
            "@app/*": ["./*"],
            "react": ["../../Glory/assets/react/node_modules/react"],
            "react/*": ["../../Glory/assets/react/node_modules/react/*"],
            "react-dom": ["../../Glory/assets/react/node_modules/react-dom"],
            "react-dom/*": ["../../Glory/assets/react/node_modules/react-dom/*"],
            "lucide-react": ["../../Glory/assets/react/node_modules/lucide-react"]
        },
        "typeRoots": ["../../Glory/assets/react/node_modules/@types", "../../Glory/assets/react/node_modules"]
    },
    "include": ["./**/*.ts", "./**/*.tsx"]
}
